{
  "name": "mongoose-express-ts",
  "version": "1.0.0",
  "engines": {
    "node": "16.x"
  },
  "description": "Mongoose Node.js Express TypeScript application boilerplate with best practices for API development.",
  "author": "Paul Cham",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "watch-tsc": "tsc -w",
    "deploy": "node dist/src/server.js",
    "watch-deploy": "nodemon dist/src/server.js",
    "server": "concurrently \"npm run watch-tsc\" \"npm run watch-deploy\"",
    "start": "npm run deploy",
    "heroku-postbuild": "npm run tsc",
    "test": "jest"
  },
  "dependencies": {
    "@types/express-serve-static-core": "^4.17.18",
    "bcryptjs": "^2.4.3",
    "config": "^3.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "http-status-codes": "^1.3.2",
    "jest": "^29.1.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.7",
    "request": "^2.88.0",
    "save-dev": "^0.0.1-security",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.34",
    "@types/express": "^4.17.11",
    "@types/gravatar": "^1.8.0",
    "@types/jest": "^29.1.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.0",
    "@types/supertest": "^2.0.12",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.0",
    "supertest": "^6.3.0"
  }
}
